@using Calendar.Models.Enums;
@using System.Security.Claims;
@model Calendar.Models.TaskStatus

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserId" value="@User.Claims.First(x => x.Type == ClaimTypes.SerialNumber).Value" />
            <div class="form-group">
                <label asp-for="OriginalTaskId" class="control-label"></label>
                <input asp-for="OriginalTaskId" class="form-control" disabled/>
                <span asp-validation-for="OriginalTaskId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GeneratedTaskId" class="control-label"></label>
                <input asp-for="GeneratedTaskId" class="form-control" disabled/>
                <span asp-validation-for="GeneratedTaskId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<TaskStatusEnum>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

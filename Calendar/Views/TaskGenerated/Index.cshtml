@model IEnumerable<Calendar.Models.TaskWithStatus>

@{
    ViewData["Title"] = "Index";
}

<h4>List of recurring tasks</h4>

<p>
    <a class="btn btn-primary" asp-action="Create">Refresh Tasks</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GeneratedTaskId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OriginalTaskId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GeneratedTaskId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OriginalTaskId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaskDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                @* <td>
                    <a asp-action="Edit" asp-route-id="@item.GeneratedTaskId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.GeneratedTaskId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.GeneratedTaskId">Delete</a>
                </td> *@
            </tr>
        }
    </tbody>
</table>

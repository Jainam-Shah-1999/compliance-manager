@using Calendar.Models.Enums;
@using System.Security.Claims;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Compliance Manager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Calendar.styles.css" asp-append-version="true" />
    <script src="https://unpkg.com/@@popperjs/core@2"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        /* Style for the button */
        .button-like-link {
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            color: #007BFF;
            background-color: transparent;
            border: none;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @if (User.Identity.IsAuthenticated)
                {
                    @if (User.IsInRole(UserTypeEnum.Client.ToString()))
                    {
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Compliance Manager</a>
                    }
                    @if (User.IsInRole(UserTypeEnum.Admin.ToString()))
                    {
                        <a class="navbar-brand" asp-area="" asp-controller="Tasks" asp-action="Index">Compliance Manager</a>
                    }
                }
                else
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Login">Compliance Manager</a>
                }
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated && User.IsInRole(UserTypeEnum.Client.ToString()))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="TaskStatus" asp-action="Index">Task status</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Tasks" asp-action="Index">Penalties</a>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated && User.IsInRole(UserTypeEnum.Admin.ToString()))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Tasks</a>
                                <div class="dropdown-menu">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Tasks" asp-action="Index">Manage tasks</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="TaskGenerated" asp-action="Index">Generate tasks</a>
                                </div>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Admin</a>
                                <div class="dropdown-menu">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">Users</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Holidays" asp-action="Index">Holidays</a>
                                </div>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item" style="margin-left: auto">
                                <form id="logoutForm" asp-controller="Home" asp-action="Logout" method="post">
                                    @Html.AntiForgeryToken()
                                    <label>Welcome, @User.Claims.First(x => x.Type == ClaimTypes.PrimarySid).Value</label>
                                    <button type="submit" class="nav-link text-dark bi bi-box-arrow-in-right button-like-link" asp-area="" asp-controller="Home" asp-action="Logout">&nbsp; Logout</button>
                                </form>
                            </li>

                        }
                        else
                        {
                            <li class="nav-item" style="margin-left: auto">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Calendar - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @*<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

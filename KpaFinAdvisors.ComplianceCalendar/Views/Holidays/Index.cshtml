@model IEnumerable<Calendar.Models.Holidays>

@{
    ViewData["Title"] = "Holiday list";
}

<h3>Holidays</h3>

<p>
    <a asp-action="Create">Add holiday</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HolidayDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HolidayName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HolidayDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HolidayName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HolidayId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HolidayId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HolidayId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
